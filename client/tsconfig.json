{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client"],
		"typeRoots": ["node_modules/@types", "./src/@types"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"components/*": ["src/components/*"]
		}
	},
	"include": ["./src/**/*"]
}
